# Django Settings
SECRET_KEY=tu_clave_secreta_generada_en_djecrety.ir
DEBUG=False
ALLOWED_HOSTS=tu-dominio.onrender.com

# Base de Datos
DATABASE_URL=postgresql://user:password@host:port/database

# Superusuario Django (para creación automática en build.sh)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=tu_contraseña_fuerte
DJANGO_SUPERUSER_EMAIL=tu_email@example.com

# CORS (Dominios permitidos para API)
CORS_ALLOWED_ORIGINS=https://tu-dominio.onrender.com

